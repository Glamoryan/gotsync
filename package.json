{
  "name": "gotsync-workspace",
  "version": "1.0.0",
  "description": "Workspace for gotsync CLI and related packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces",
    "cli": "node packages/cli/dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:snapshots": "vitest run --reporter=verbose src/__tests__/**/*.test.ts --update-snapshots"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.7",
    "@types/swagger-parser": "^4.0.3",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "keywords": [
    "cli",
    "gotsync",
    "typescript",
    "go",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "ejs": "^3.1.10",
    "openapi-types": "^12.1.3"
  }
}
