{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@types/*": ["./src/core/types/*"],
      "@parser/*": ["./src/core/parser/*"],
      "@generator/*": ["./src/core/generator/*"],
      "@utils/*": ["./src/core/utils/*"],
      "@templates/*": ["./templates/*"],
      "@tests/*": ["./src/__tests__/*"],
      "@cli/*": ["./packages/cli/src/*"]
    }
  },
  "references": [
    {
      "path": "./packages/cli"
    }
  ],
  "files": [],
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/node_modules",
    "packages/*/dist"
  ]
} 